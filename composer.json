{
    "name": "bear/query-repository",
    "description": "Resource query responsibility segregation",
    "license": "MIT",
    "authors": [
        {
            "name": "Akihito Koriyama",
            "email": "akihito.koriyama@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "bear/resource": "^1.x-dev",
        "bear/sunday": "1.x-dev",
        "doctrine/annotations": "^1.8",
        "doctrine/cache": "^1.10",
        "mobiledetect/mobiledetectlib": "^2.8",
        "ray/aop": "2.x-dev",
        "ray/di": "2.x-dev"
    },
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "ext-redis": "*",
        "bamarni/composer-bin-plugin": "^1.4",
        "koriym/attributes": "^0.2",
        "symfony/process": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "BEAR\\QueryRepository\\": ["src/", "src-deprecated/"],
            "BEAR\\RepositoryModule\\Annotation\\": "src-annotation/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BEAR\\QueryRepository\\": [
                "tests/",
                "tests/Fake/",
                "tests-php8/Fake"
            ],
            "FakeVendor\\HelloWorld\\": [
              "tests/Fake/fake-app/src"
            ]
        },
        "files": ["tests/Fake/Memcached.php", "tests/Fake/Redis.php", "tests/syslog.php"]
    },
    "scripts" :{
        "post-install-cmd": ["@composer bin all install --ansi"],
        "post-update-cmd": ["@composer bin all update --ansi"],
        "test": ["phpunit"],
        "tests": ["@cs", "@sa", "@test"],
        "sa": ["./vendor/bin/phpstan analyse -l max src tests -c phpstan.neon --no-progress", "psalm --show-info=false"],
        "coverage": ["php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"],
        "cs": ["./vendor/bin/php-cs-fixer fix -v --dry-run", "phpcs --standard=./phpcs.xml src"],
        "cs-fix": ["./vendor/bin/php-cs-fixer fix -v", "phpcbf src"],
        "metrics": ["./vendor/bin/phpmetrics --report-html=build/metrics --exclude=Exception --log-junit=build/junit.xml --junit=build/junit.xml src"],
        "build": ["@cs", "@sa", "@coverage", "@metrics"],
        "baseline": ["phpstan analyse --configuration phpstan.neon src/ tests/ --generate-baseline", "vendor/bin/psalm --set-baseline=psalm.baseline.xml"]
    }
}
