{
    "name": "bear/query-repository",
    "description": "Resource query responsibility segregation",
    "license": "MIT",
    "authors": [
        {
            "name": "Akihito Koriyama",
            "email": "akihito.koriyama@gmail.com"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "bear/resource": "^1.4.0",
        "mobiledetect/mobiledetectlib": "^2.5.0",
        "doctrine/cache": "^1.6.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "psr-4": {
            "BEAR\\QueryRepository\\": "src/",
            "BEAR\\RepositoryModule\\Annotation\\": "src-annotation/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BEAR\\QueryRepository\\": [
                "tests/",
                "tests/Fake/"
            ],
            "FakeVendor\\HelloWorld\\": "tests/Fake/fake-app/src",
            "": "tests/Fake"
        }
    },
    "scripts" :{
        "test": ["@cs", "phpunit"],
        "coverage": ["php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"],
        "cs": ["php-cs-fixer fix -v --dry-run", "phpcs --standard=./phpcs.xml src"],
        "cs-fix": ["php-cs-fixer fix -v", "phpcbf src"]
    }
}
